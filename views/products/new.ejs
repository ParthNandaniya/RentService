<% include ../partials/header %>

<div class="ui main text container segment" style="margin-top: 50px;">
    <div class="ui huge header">Add New Product</div>
    <form class="ui form" action="/products" method="POST">
        <div class="field">
            <lable class="lable">Title</lable>
            <input type="text" name="product[name]" placeholder="product name">
        </div>
        <div class="field">
            <lable class="lable">Image</lable>
            <input type="text" name="product[img]" placeholder="image URL">
        </div>
        <div class="field">
            <lable class="lable">Price</lable>
            <input type="text" name="product[price]" placeholder="Rs.">
        </div>
        <div class="field">
            <lable class="lable">Description</lable>
            <textarea name="product[desc]" placeholder="Product detail"></textarea>
        </div>
        <input class="ui green big inverted button" type="submit">
    </form>
</div>

<% include ../partials/footer %>

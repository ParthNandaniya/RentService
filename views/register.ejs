<div class="ui main text container segment" style="margin-top: 100px;">
<div class="ui large header">Tell us about yourself</div>
<form class="ui form" action="/register" method="POST" style="margin: 20px;">
  
  <div class="two fields" style="margin-top: 5px;">
    <div class="field" style="margin-top: 5px;">
      <label>Name</label>
      <input placeholder="First Name" name="name" type="text">
    </div>
    <div class="field" style="margin-top: 5px;">
      <label>Gender</label>
      <select class="ui dropdown" name="gender">
        <option value="">Gender</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>
  </div>
    <div class="field" style="margin-top: 5px;">
        <label>Email</label>
        <input placeholder="Email" name="email" type="text">
    </div>
  <div class="two fields" style="margin-top: 5px;">
    <div class="field" style="margin-top: 5px;">
      <label>Username</label>
      <input placeholder="Username" name="username" type="text">
    </div>
    <div class="field" style="margin-top: 5px;">
      <label>Password</label>
      <input type="password" name="password">
    </div>
  </div>
  <div class="inline field" style="margin-top: 5px;">
    <div class="ui checkbox">
      <input type="checkbox" name="terms">
      <label><a href="/rent-service/about/terms">I agree to the terms and conditions</a></label>
    </div>
  </div>
  <div class="ui primary submit button" style="margin-top: 5px;">Submit</div>
  <div class="ui error message"></div>
</form>
</div>


<script>
    $('select.dropdown')
        .dropdown()
    ;
    $('.ui.form')
      .form({
        fields: {
          name: {
            identifier: 'name',
            rules: [
              {
                type   : 'empty',
                prompt : 'Please enter your name'
              }
            ]
          },
          email: {
            identifier: 'email',
            rules: [
              {
                type: 'regExp',
                value: /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/,
                prompt: 'Please Enter valid email address'
              }
            ]
          },
          gender: {
            identifier: 'gender',
            rules: [
              {
                type   : 'empty',
                prompt : 'Please select a gender'
              }
            ]
          },
          username: {
            identifier: 'username',
            rules: [
              {
                type   : 'empty',
                prompt : 'Please enter a username'
              }
            ]
          },
          password: {
            identifier: 'password',
            rules: [
              {
                type   : 'empty',
                prompt : 'Please enter a password'
              },
              {
                type   : 'minLength[6]',
                prompt : 'Your password must be at least {ruleValue} characters'
              }
            ]
          },
          terms: {
            identifier: 'terms',
            rules: [
              {
                type   : 'checked',
                prompt : 'You must agree to the terms and conditions'
              }
            ]
          }
        }
      })
    ;
</script>

